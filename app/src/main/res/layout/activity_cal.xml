<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragment.CalActivity">

        <Button
            android:id="@+id/bt_fragment_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plus frag 추가" />
        <Button
            android:id="@+id/bt_fragment_plus_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plus frag 지우기" />
        <Button
            android:id="@+id/bt_fragment_plus_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위 toggle" />

        <FrameLayout
            android:id="@+id/fl_show_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_fragment_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multiple frag 추가" />
        <Button
            android:id="@+id/bt_fragment_mul_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mul frag 지우기" />
        <Button
            android:id="@+id/bt_fragment_mul_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아래 toggle" />

        <FrameLayout
            android:id="@+id/fl_show_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

