<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrameAnimationActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_animation_start"
        android:text="Animation Start"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_animation_stop"
        android:text="Animation Stop"
        />
    <ImageView

        android:id="@+id/iv_animation_run"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/animation_list"
        android:layout_gravity="center"/>

</LinearLayout>