<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrameAnimationActivity">

    <Button
        android:id="@+id/bt_animation_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRANSLATE" />

    <Button
        android:id="@+id/bt_animation_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ROTATE" />

    <Button
        android:id="@+id/bt_animation_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCALE" />

    <Button
        android:id="@+id/bt_animation_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALPHA" />

    <ImageView

        android:id="@+id/iv_animation_run"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/pink_run_001" />

</LinearLayout>